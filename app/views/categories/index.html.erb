<div class="container be-white">
  <h1>Listado de Categorias</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.nombre %></td>
          <td><%= category.color %></td>
          <td><%= link_to 'Ver', category %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Nueva Categoria', new_category_path, class: "btn" %>


</div>
