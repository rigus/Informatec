<%nameBtn ||= "Crear" %>
<%titulo ||= "Nuevo Articulo" %>
<div class="container">
<div class="be-white z-depth-2">
  <h2><%= titulo %></h2>
  <%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="field col-md">
        <%= f.label :titulo %><br>
        <%= f.text_field :titulo %>
      </div>
      <div class="field col-md">
        <%= f.label :autor %><br>
        <%= f.text_field :autor %>
      </div>
      <div class="field col-md">
        <%= f.label :link %><br>
        <%= f.text_field :link %>
      </div>
      <div class="field col-md">
        <%= f.label :tipo %>
        <%= f.select :tipo , options_for_select(["Arbitrado", "Divulgacion"].each {|tipo| [tipo]}) %>
      </div>
    </div>
    <div class="field">
      <%= f.label :resumen %><br>
      <%= f.text_area :resumen, style:"height:200px" %>
    </div>
    <label>Categor√≠as</label>
    <%@categories.each do |category| %>
    <div class="field box">
      <%= check_box_tag 'categories[]', category.id%> <%= category.nombre %>
    </div>
    <%end %>
    <div class="field row end-xs">
      <%= f.file_field :cover %>
    </div>
    <div class="field row end-xs">
      <%= f.file_field :document %>
    </div>

    <div class="actions">
      <%= f.submit nameBtn, class:"waves-effect waves-light btn" %>
      <%= link_to 'Regresar', articles_path, class:"waves-effect waves-light btn" %>
    </div>
  <% end %>
</div>

</div>
